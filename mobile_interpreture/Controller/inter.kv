

<MyContainer>:
    orientation: "vertical"
    MDBoxLayout:
        size_hint: 1, 0.12
        md_bg_color: app.theme_cls.primary_dark
        MDLabel:
            size_hint: 0.3, 1
            id: filen
            text: "Welcome"
            md_bg_color: app.theme_cls.primary_dark
            halign: "center"
            valign: "top"
            size: self.size
        MDTopAppBar:
            size_hint: 0.7, 1
            md_bg_color: app.theme_cls.primary_dark
            MDBoxLayout:
                spacing: 5
                MDIconButton:
                    icon: "delete"
                    on_release: root.delete_file()
                MDIconButton:
                    icon: "plus"
                    on_release:
                        root.create_file()
                MDLabel:
                    text_size: self.size
                    size_hint: 1, 1
                    halign: "right"
                    valign: "middle"
                    text: ""
                    size: self.size
                MDRaisedButton:
                    text: "run"
                    on_release:
                        root.run_file()
                MDRaisedButton:
                    text: "save"
                    on_release:
                        root.save_file()
                MDRaisedButton:
                    text: "open"
                    on_release:
                        root.file_manager_open()
    MDBoxLayout:
        orientation: 'vertical'
        TextInput:
            size_hint: 1, 0.8
            id: fname
            text: ""
            enabled: False
            opacity: 0
            halign: "left"
            background_color: (0,0,0,0)
            foreground_color: (1,1,1,1)
        ScrollView:
            do_scroll_x: True
            do_scroll_y: True
            size_hint: 1, 0.3
            MDLabel:
                id: run
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                color: 1,1,1,1
                padding: 10, 10
                halign: "left"
                valign: "top"
                text: '>>'
