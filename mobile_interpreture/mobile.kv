

<Container>:
    orientation: "vertical"
    MDBoxLayout:
        size_hint: 1, 0.1
        MDTopAppBar:
            size_hint: 0.3, 1
            title: "Mobile Python"
            md_bg_color: app.theme_cls.primary_dark
        MDTopAppBar:
            size_hint: 0.7, 1
            md_bg_color: app.theme_cls.primary_dark
            MDBoxLayout:
                spacing: 10
                TextInput:
                    id: cfile
                    enabled: False
                    opacity: 0
                    halign: "left"
                    valign: "middle"
                MDRaisedButton:
                    text: "save"
                    on_release:
                        root.save_file()
                MDRaisedButton:
                    text: "open"
                    on_release:
                        root.file_manager_open()

    TextInput:
        size_hint: 1, 1
        id: fname
        text: ""
        enabled: False
        opacity: 0
        halign: "left"
            

