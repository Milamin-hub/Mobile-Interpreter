

<Container>:
    orientation: "vertical"
    MDBoxLayout:
        size_hint: 1, 0.1
        MDTopAppBar:
            size_hint: 0.3, 1
            title: "Mobile Python"
            md_bg_color: app.theme_cls.accent_color
            MDBoxLayout:
                spacing: 10
                TextInput:
                    md_bg_color: app.theme_cls.accent_color
                    id: cfile
                    halign: "left"
                    valign: "middle"

                MDRaisedButton:
                    text: "create"
                    on_release:
                        root.on_create()
                MDRaisedButton:
                    text: "save"
                    on_release:
                        root.on_save()
                
    MDTabs:
        size_hint: 1, 0.9
        title: app.title
        text: ""
        id: tabs
        on_tab_switch: app.on_tab_switch(*args)

<Tab>
    TextInput:
        size_hint: 1, 1
        id: fname
        text: ""
        halign: "left"
    MDRaisedButton:
        text: "show"
        on_release:
            root.take_text()