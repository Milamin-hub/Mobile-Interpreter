

<Container>:
    orientation: "vertical"

    
    
    MDBoxLayout:
        size_hint: 1, 0.1

        MDTopAppBar:

            MDBoxLayout:
                spacing: 10
                TextInput:
                    md_bg_color: app.theme_cls.accent_color
                    id: cfile
                    halign: "left"
                    valign: "middle"

                MDRaisedButton:
                    text: "create"
                    on_release:
                        root.on_create()
                MDRaisedButton:
                    text: "save"
                    on_release:
                        root.take_text_tabs()
            
    MDTabs:
        size_hint: 1, 0.9
        title: app.title
        text: ""
        id: tabs
        on_tab_switch: app.on_tab_switch(*args)

<Tab>
    TextInput:
        size_hint: 1, 1
        id: fname
        text: ""
        halign: "left"