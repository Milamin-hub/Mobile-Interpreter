

<Container>:
    orientation: "vertical"
    MDBoxLayout:
        size_hint: 1, 0.1
        md_bg_color: app.theme_cls.primary_dark
        Label:
            size_hint: 0.3, 1
            id: filen
            text: "Welcome"
            md_bg_color: app.theme_cls.primary_dark
        MDTopAppBar:
            size_hint: 0.7, 1
            md_bg_color: app.theme_cls.primary_dark
            MDBoxLayout:
                spacing: 5
                halign: "right"
                size: self.size
                MDRaisedButton:
                    text: "run"
                    on_release:
                        root.run_file()
                MDRaisedButton:
                    text: "save"
                    on_release:
                        root.save_file()
                MDRaisedButton:
                    text: "open"
                    on_release:
                        root.file_manager_open()
    MDBoxLayout:
        orientation: 'vertical'
        TextInput:
            size_hint: 1, 1
            id: fname
            text: ""
            enabled: False
            opacity: 0
            halign: "left"
        Label:
            text_size: self.size
            size_hint: 1, 0.2
            id: run
            halign: "left"
            valign: "top"
            text: '>>'
            size: self.size

<MDFileManager>
    MDIconButton:
        md_bg_color: app.theme_cls.primary_color
        icon: "delete"
        pos_hint: {'x': .860, 'y': .904}
        pos: self.pos
    MDIconButton:
        md_bg_color: app.theme_cls.primary_color
        icon: "plus"
        pos_hint: {'x': .800, 'y': .904}
        pos: self.pos


