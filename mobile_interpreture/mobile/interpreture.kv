

<Container>:
    rows: 3
    orientation: 'vertical'
    padding: 2


    GridLayout:
        cols: 2
        size_hint: 1, 0.1

        BoxLayout:
            size_hint: 0.4, 0.1
            Label:
                text: 'Mobile Interpreture'
                font_size: 15

        BoxLayout:
            size_hint: 0.6, 0.2
            Button:
                text: 'open'
            Button:
                text: 'save'
            Button:
                text: 'run'

    AnchorLayout:
        size_hint: 1, 0.8
        TextInput:
            text: '1'
    
    BoxLayout:
        size_hint: 1, 0.2
        Label:
            text: '>>'
            halign: 'left'
            valign: 'top'
            text_size: self.size            
            
