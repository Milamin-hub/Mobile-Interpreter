

<InterpretureView>:
    orientation: "vertical"
    MDBoxLayout:
        orientation: 'horizontal'
        size_hint: 1, None
        size: self.size_hint_x, 75
        md_bg_color: app.theme_cls.primary_dark
        spacing: 5
        padding: 15, 0, 0, 0
        MDLabel:
            size_hint_y: 1
            valign: "top"
            id: filen
            text: "Welcome"
        MDIconButton:
            size_hint_y: 1
            valign: "top"
            icon: "delete"
            on_release: root.delete_file()
        MDIconButton:
            size_hint_y: 1
            valign: "top"
            icon: "plus"
            on_release: root.create_file()
        MDIconButton:
            size_hint_y: 1
            valign: "top"
            icon: "play"
            on_release: root.run_file()
        MDIconButton:
            size_hint_y: 1
            valign: "top"
            icon: "folder"
            on_release: root.file_manager_open()
    MDBoxLayout:
        orientation: 'vertical'
        CodeInput:
            size_hint: 1, 0.8
            id: codeinput
            text: ""
            enabled: False
            opacity: 0
            halign: "left"
            background_color: (0,0,0,0)
            foreground_color: (1,1,1,1)
        ScrollView:
            do_scroll_x: True
            do_scroll_y: True
            size_hint: 1, None
            size: self.size_hint_x, 200
            MDLabel:
                id: terminal
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                color: 1,1,1,1
                padding: 10, 10
                halign: "left"
                valign: "top"
                text: '>>'
